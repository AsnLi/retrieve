border-1px($color)
  position: relative 
  &:after
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border: 1px solid $color
    transform: scaleY(0.5);
    content: ' '

border-none()
  &:after
    display: none

// 单行显示省略号
no-wrap()
  text-overflow: ellipsis
  overflow: hidden
  white-space: nowrap

// 多行显示省略号
no-wrap-more($col)
  display: -webkit-box
  -webkit-box-orient: vertical
  -webkit-line-clamp: $col
  overflow: hidden

//rem转换  $px / 75 *1rem
px2rem($px)
  $px * 1rpx